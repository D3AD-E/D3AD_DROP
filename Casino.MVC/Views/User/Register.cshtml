@model CasinoMVC.Models.InputRegisterModel

<div class="container w-50 p-3">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="p-5">
                <div class="text-center">
                    <h4 class="text-dark mb-4"><strong>Register</strong></h4>
                </div>
                <form class="user py-2" asp-action="Register">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group mb-3"><input class="form-control form-control-user" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter Email Address..."></div>
                    <div class="form-group mb-3"><input class="form-control form-control-user" asp-for="Password" placeholder="Password"></div>
                    <div class="form-group mb-3"><input class="form-control form-control-user" asp-for="ConfirmPassword" placeholder="Repeat password"></div>
                    <button class="btn btn-primary btn-block text-white btn-user" type="submit">Register</button>
                </form>
            </div>
            <a class="link-secondary" asp-action="SignIn">Adready have an account?</a>
        </div>
    </div>
</div>