@model CasinoMVC.Models.InputLoginModel

<div class="container w-50 p-3">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="p-5 d-block w-100">
                <div class="text-center">
                    <h4 class="text-dark mb-4"><strong>Sign in</strong></h4>
                </div>
                <form class="user py-2" asp-action="SignIn">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group mb-3"><input class="form-control form-control-user" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter Email Address..."></div>
                    <div class="form-group mb-3"><input class="form-control form-control-user" asp-for="Password" placeholder="Password"></div>
                    <div class="form-group mb-3">
                        <div class="custom-control custom-checkbox small">
                            <div class="form-check">
                                <input class="form-check-input custom-control-input" asp-for="RememberMe">
                                <label class="form-check-label custom-control-label">Remember Me</label>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary btn-block text-white btn-user" type="submit">Log in</button>
                </form>
                <a class="link-secondary" asp-action="Register">Do not have an account?</a>
            </div>
        </div>
    </div>
</div>
